<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@null</item>
        <item name="boxStrokeColor">#1789DB</item>
        <item name="hintTextColor">#1789DB</item>
        <item name="android:textColorHint">#1789DB</item>
        <item name="android:hint">label</item>
        <item name="android:layout_marginRight">12sp</item>
    </style>
    <style name="style_label">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="style_add">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="dialog_style">
        <item name="android:background">@drawable/dialog_btn</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="newStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/cardview_light_background</item>
        <item name="chipStrokeColor">@color/search_chip_background_selected</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="currency_name_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">26sp</item>
    </style>
    <style name="button">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="backgroundTint">@color/button</item>
        <item name="cornerRadius">@dimen/corner</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="android:textColor">@color/stroke</item>
        <item name="android:textSize">@dimen/buttonText</item>
    </style>

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textview</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textview2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/stroke</item>
    </style>

    <style name="data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="new_button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="backgroundTint">@color/button</item>
        <item name="cornerRadius">@dimen/corner</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="android:textColor">@color/stroke</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="personal_page_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">36sp</item>
    </style>
</resources>